<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="org.sakaiproject.videoconference.adobeconnect.external.ExternalLogic" class="org.sakaiproject.videoconference.adobeconnect.external.ExternalLogicImpl" init-method="init" singleton="true">
        <property name="sessionManager" ref="org.sakaiproject.tool.api.SessionManager" />
        <property name="siteService" ref="org.sakaiproject.site.api.SiteService" />
        <property name="toolManager" ref="org.sakaiproject.tool.api.ToolManager" />
        <property name="userDirectoryService" ref="org.sakaiproject.user.api.UserDirectoryService" />
		<property name="functionManager" ref="org.sakaiproject.authz.api.FunctionManager" />
		<property name="securityService" ref="org.sakaiproject.authz.api.SecurityService" />
		<property name="serverConfigurationService" ref="org.sakaiproject.component.api.ServerConfigurationService" />
		<property name="preferencesService" ref="org.sakaiproject.user.api.PreferencesService" />
		<property name="calendarService" ref="org.sakaiproject.calendar.api.CalendarService" />
		<property name="timeService" ref="org.sakaiproject.time.api.TimeService" />
		<property name="announcementService" ref="org.sakaiproject.announcement.api.AnnouncementService" />
		<property name="emailService" ref="org.sakaiproject.email.api.EmailService" />
		<property name="authzGroupService" ref="org.sakaiproject.authz.api.AuthzGroupService" />
    </bean>

	<!-- communication with database -->
	<bean id="org.sakaiproject.videoconference.adobeconnect.external.DataModel" class="org.sakaiproject.videoconference.adobeconnect.external.DataModelImpl" init-method="init" singleton="true">
		<property name="externalLogic" ref="org.sakaiproject.videoconference.adobeconnect.external.ExternalLogic" />
		<property name="sqlService" ref="org.sakaiproject.db.api.SqlService" />
    </bean>
	
	<!-- communication with adobe connect server -->
	<bean id="org.sakaiproject.videoconference.adobeconnect.external.ServiceConnector" class="org.sakaiproject.videoconference.adobeconnect.external.ServiceConnectorImpl" init-method="init" singleton="true">
		<property name="externalLogic" ref="org.sakaiproject.videoconference.adobeconnect.external.ExternalLogic" />
		<property name="toolManager"><ref bean="org.sakaiproject.tool.api.ToolManager" /></property> 
    </bean>
	
	<!-- logic bean -->
    <bean id="org.sakaiproject.videoconference.adobeconnect.logic.VideoconferenceLogic" class="org.sakaiproject.videoconference.adobeconnect.logic.VideoconferenceLogicImpl" init-method="init" singleton="true">
        <property name="serviceConnector" ref="org.sakaiproject.videoconference.adobeconnect.external.ServiceConnector" />
		<property name="dataModel" ref="org.sakaiproject.videoconference.adobeconnect.external.DataModel" />
        <property name="externalLogic" ref="org.sakaiproject.videoconference.adobeconnect.external.ExternalLogic" />
    </bean>
</beans>
