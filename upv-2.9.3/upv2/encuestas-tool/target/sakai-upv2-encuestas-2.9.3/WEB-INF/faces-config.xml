<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>

    <managed-bean>
		<managed-bean-name>encuestas</managed-bean-name>
		<managed-bean-class>org.sakaiproject.upv2.encuestas.util.EncuestasAction</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>


  <application>
    <locale-config>
      <default-locale>es</default-locale>
      <supported-locale>en</supported-locale>
    </locale-config>
  </application>

  <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>encuestas</from-outcome>
      <to-view-id>/encuestas.jsp</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>error</from-outcome>
      <to-view-id>/error.jsp</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>pase</from-outcome>
      <to-view-id>/existePase.jsp</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>


  <navigation-rule>
    <from-view-id>/encuestas.jsp</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/success.jsp</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  
  <application>
		<locale-config>
			<default-locale>es_ES</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<message-bundle>org.sakaiproject.tool.encuestas.bundle.Messages</message-bundle>
	</application>

</faces-config>
